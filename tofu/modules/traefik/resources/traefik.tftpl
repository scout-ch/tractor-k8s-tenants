#
# RBAC
#
---
apiVersion: v1
kind: Namespace
metadata:
  labels:
    toolkit.fluxcd.io/tenant: traefik
  name: traefik
---
apiVersion: v1
kind: ServiceAccount
metadata:
  labels:
    toolkit.fluxcd.io/tenant: traefik
  name: traefik
  namespace: traefik
---
# traefik needs cluster-wide permissions to watch for IngressRoutes and provides CRDs
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  labels:
    toolkit.fluxcd.io/tenant: traefik
  name: traefik-reconciler
  namespace: traefik
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
  - kind: ServiceAccount
    name: traefik
    namespace: traefik
#
# Traefik HelmRelease
#
---
apiVersion: source.toolkit.fluxcd.io/v1
kind: HelmRepository
metadata:
  name: traefik
  namespace: traefik
spec:
  interval: 1h
  url: https://helm.traefik.io/traefik
---
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: traefik
  namespace: traefik
spec:
  serviceAccountName: traefik
  chart:
    spec:
      chart: traefik
      reconcileStrategy: ChartVersion
      sourceRef:
        kind: HelmRepository
        name: traefik
      version: 39.0.0
  interval: 10m0s
  values:
    ingressRoute:
      dashboard:
        enabled: true
    providers:
      kubernetesGateway:
        enabled: true
    gateway:
      enabled: false # Gateways need to be created manually per namespace for tenant separation
    service:
      spec:
        externalTrafficPolicy: Local # ðŸ‘ˆ Preserve client source IP
      annotations:
        loadbalancer.openstack.org/proxy-protocol: "true" # ðŸ‘ˆ Amphora LB Proxy Protocol einschalten
    logs:
      access:
        enabled: true
    ports:
      web:
        proxyProtocol:
          insecure: true
        http:
          redirections:
            entryPoint:
              priority: 1
              to: websecure
              scheme: https
              permanent: true
      websecure:
        proxyProtocol:
          insecure: true
    deployment:
      replicas: 3
    %{ if instance_pool!= null }
    nodeSelector:
      kaas.infomaniak.cloud/instance-pool: ${instance_pool}
    %{ endif }
